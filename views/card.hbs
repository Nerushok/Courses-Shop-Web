<h1>Card</h1>

<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Count</th>
                <th>actions</th>
            </tr>
            </thead>

            <tbody>

            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn red js-remove" data-id="{{_id}}">Delete</button>
                    </td>
                </tr>
            {{/each}}

            </tbody>

        </table>

        <p><strong>Price:</strong> <span class="price">{{price}}</span></p>
        <form action="/orders" method="POST">
            <button class="btn" type="submit">Order</button>
        </form>
    {{else}}
        <p>Card is empty</p>
    {{/if}}
</div>