<h1>Add new course</h1>

{{#if error}}
    <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Input course name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{data.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Input course price"></span>
    </div>

    <div class="input-field">
        <input id="image" name="img" type="text" class="validate" required value="{{data.img}}">
        <label for="image">Image URL</label>
        <span class="helper-text" data-error="Input image URL"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csurf}}">

    <button class="btn btn-primary">Add</button>
</form>